                  <MenuItem mnemonicParsing="false" onAction="#abrirInicio" text="Inicio" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Venta">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#abrirVentas" text="Nueva venta" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" onAction="#reporteClientes" text="Informes">
            <items>
              <MenuItem mnemonicParsing="false" text="Clientes" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
