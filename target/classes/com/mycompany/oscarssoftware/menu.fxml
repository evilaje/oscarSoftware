                  <MenuItem mnemonicParsing="false" onAction="#abrirPedidos" text="Pedidos">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="P" control="ANY" meta="UP" shift="UP" shortcut="UP" />
